---

<section id="contact" class="section bg-gray-50">
  <div class="container-custom">
    <SectionTitle title={title} subtitle={subtitle} />
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Contact Form -->
      <div class="lg:col-span-2 bg-white p-8 rounded-lg shadow-md">
        <form 
          id="contact-form" 
          class="space-y-6"
          action={GOOGLE_FORM_ACTION}
          method="POST"
          target="hidden_iframe"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">{name}</label>
              <input
                type="text"
                id="name"
                name="entry.1855834336"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">{email}</label>
              <input
                type="email"
                id="email"
                name="entry.1544296567"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">{subject}</label>
            <input
              type="text"
              id="subject"
              name="entry.1858701846"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">{message}</label>
            <textarea
              id="message"
              name="entry.1578563212"
              rows="5"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
            ></textarea>
          </div>
          
          <input type="hidden" name="entry.xxxxxxxxx" value={new Date().toISOString()} />
          
          <div>
            <button
              type="submit"
              class="w-full btn btn-primary"
            >
              {send}
            </button>
          </div>
          
          <!-- Form feedback messages -->
          <div id="form-success" class="hidden p-4 bg-green-100 text-green-700 rounded-md">
            {formSuccess}
          </div>
          
          <div id="form-error" class="hidden p-4 bg-red-100 text-red-700 rounded-md">
            {formError}
          </div>
        </form>
        
        <!-- Hidden iframe for form submission -->
        <iframe name="hidden_iframe" id="hidden_iframe" style="display:none;"></iframe>
      </div>
      
      <!-- Contact Information -->
      <div class="bg-primary-600 text-white p-8 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-6 border-b border-primary-500 pb-4">
          {lang === 'fr' ? 'Informations de contact' : 'Contact Information'}
        </h3>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{address}</span>
          </div>
          
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>{emailContact}</span>
          </div>
          
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>{phone}</span>
          </div>
          
          <div class="pt-4 border-t border-primary-500">
            <h4 class="font-semibold mb-2">{hoursTitle}</h4>
            <p>{hours}</p>
          </div>
          
          <div class="pt-4 border-t border-primary-500">
            <h4 class="font-semibold mb-3">{lang === 'fr' ? 'Suivez-nous' : 'Follow Us'}</h4>
            <div class="flex flex-wrap gap-4">
              {socialLinks.map(social => (
                <a 
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-white hover:text-primary-300 transition-colors"
                  aria-label={social.name}
                >
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d={social.icon} />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const contactForm = document.getElementById('contact-form');
  const formSuccess = document.getElementById('form-success');
  const formError = document.getElementById('form-error');
  const iframe = document.getElementById('hidden_iframe');

  if (contactForm && iframe) {
    iframe.addEventListener('load', () => {
      formSuccess?.classList.remove('hidden');
      formError?.classList.add('hidden');
      contactForm.reset();
      formSuccess?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    });

    contactForm.addEventListener('submit', (e) => {
      // Let the form submit to the Google Form
      setTimeout(() => {
        formSuccess?.classList.remove('hidden');
        formError?.classList.add('hidden');
      }, 1000);
    });
  }
</script>