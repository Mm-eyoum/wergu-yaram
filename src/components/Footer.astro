---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- About -->
      <div>
        <div class="flex items-center mb-4">
          <img src="https://i.ibb.co/0j2crmx2/9.png" alt="Wergu Yaram Logo" class="h-10 mr-3" />
          <h4 class="font-heading font-bold text-xl">Wergu Yaram</h4>
        </div>
        <p class="text-gray-300 mb-4">
          {isEnglish 
            ? "Together, let's be tomorrow's heroes in healthcare through digitalization."
            : "Ensemble, soyons les héros de demain dans la santé grâce à la digitalisation."}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-heading font-semibold text-lg mb-4 border-b border-gray-700 pb-2">
          {isEnglish ? "Quick Links" : "Liens Rapides"}
        </h4>
        <ul class="space-y-2">
          <li><a href="#home" class="text-gray-300 hover:text-white transition-colors">
            {isEnglish ? "Home" : "Accueil"}
          </a></li>
          <li><a href="#mission" class="text-gray-300 hover:text-white transition-colors">
            {isEnglish ? "Mission" : "Mission"}
          </a></li>
          <li><a href="#actions" class="text-gray-300 hover:text-white transition-colors">
            {isEnglish ? "Actions" : "Actions"}
          </a></li>
          <li><a href="#news" class="text-gray-300 hover:text-white transition-colors">
            {isEnglish ? "News" : "Actualités"}
          </a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-heading font-semibold text-lg mb-4 border-b border-gray-700 pb-2">
          {isEnglish ? "Contact" : "Contact"}
        </h4>
        <ul class="space-y-2 text-gray-300">
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-1 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Duplex Eyone, derrière Exclusive VDN, Dakar - Senegal</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-1 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>contact@eyone.net</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-1 text-primary-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>+221 33 825 96 11</span>
          </li>
        </ul>
      </div>

      <!-- Social Media -->
      <div>
        <h4 class="font-heading font-semibold text-lg mb-4 border-b border-gray-700 pb-2">
          {isEnglish ? "Follow Us" : "Suivez-nous"}
        </h4>
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-white hover:text-primary-300 transition-colors"
              aria-label={social.name}
            >
              <span class="sr-only">{social.name}</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d={social.icon} clip-rule="evenodd" />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Partners -->
    <div class="border-t border-gray-800 pt-8 pb-12">
      <h4 class="font-heading font-semibold text-lg mb-6 text-center">
        {isEnglish ? "Our Partners" : "Nos Partenaires"}
      </h4>
      <div class="flex flex-wrap justify-center items-center gap-8">
        {partners.map(partner => (
          <div class="bg-white p-4 rounded-lg">
            <img src={partner.logo} alt={partner.name} class="h-12" />
          </div>
        ))}
      </div>
    </div>

    <!-- Copyright & Legal -->
    <div class="border-t border-gray-800 pt-8 text-center text-gray-400 text-sm">
      <div class="flex flex-col md:flex-row justify-center items-center gap-4 mb-4">
        <a href={`${isEnglish ? "/en" : ""}/mentions-legales`} class="hover:text-white transition-colors">
          {isEnglish ? "Legal Notice" : "Mentions Légales"}
        </a>
        <span class="hidden md:inline">•</span>
        <a href={`${isEnglish ? "/en" : ""}/politique-confidentialite`} class="hover:text-white transition-colors">
          {isEnglish ? "Privacy Policy" : "Politique de Confidentialité"}
        </a>
      </div>
      <p>© {currentYear} Wergu Yaram - {isEnglish ? "All rights reserved" : "Tous droits réservés"}</p>
    </div>
  </div>
</footer>