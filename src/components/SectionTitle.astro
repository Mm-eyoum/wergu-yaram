---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center' | 'right';
  titleColor?: string;
  subtitleColor?: string;
}

const { 
  title, 
  subtitle, 
  align = 'center',
  titleColor = 'text-gray-900',
  subtitleColor = 'text-gray-600'
} = Astro.props;

const alignment = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
};
---

<div class={`mb-12 max-w-3xl mx-auto ${alignment[align]}`}>
  <h2 class={`text-3xl md:text-4xl font-bold mb-4 ${titleColor}`}>
    {title}
  </h2>
  
  {subtitle && (
    <p class={`text-lg md:text-xl ${subtitleColor}`}>
      {subtitle}
    </p>
  )}
</div>