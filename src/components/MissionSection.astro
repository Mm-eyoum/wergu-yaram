---
import SectionTitle from './SectionTitle.astro';

const { lang = 'fr' } = Astro.props;

const content = {
  fr: {
    title: "Notre Mission",
    subtitle: "Transformer la santé par la digitalisation inclusive",
    description: "Le programme Wergu Yaram d'Eyone Medical s'engage à révolutionner les structures de santé grâce à une approche de digitalisation centrée sur l'humain. Notre objectif est d'améliorer l'accès aux soins de santé en développant des solutions numériques adaptées aux réalités locales.",
    focusTitle: "Notre approche s'articule autour de l'ODD 3",
    focusDescription: "Permettre à tous de vivre en bonne santé et promouvoir le bien-être de tous à tout âge grâce à l'innovation responsable en e-santé.",
    valuesList: [
      {
        title: "Innovation Responsable",
        description: "Développer des solutions numériques éthiques et adaptées aux besoins réels des communautés.",
        icon: "lightbulb"
      },
      {
        title: "Inclusion Numérique",
        description: "Garantir que nos solutions sont accessibles à tous, indépendamment de la localisation ou du niveau d'alphabétisation.",
        icon: "users"
      },
      {
        title: "Durabilité",
        description: "Créer des systèmes pérennes qui s'intègrent dans les infrastructures existantes et qui évoluent avec les besoins.",
        icon: "leaf"
      },
      {
        title: "Collaboration",
        description: "Travailler main dans la main avec les acteurs locaux, les professionnels de santé et les communautés.",
        icon: "handshake"
      }
    ]
  },
  en: {
    title: "Our Mission",
    subtitle: "Transforming healthcare through inclusive digitalization",
    description: "Eyone Medical's Wergu Yaram program is committed to revolutionizing healthcare facilities through a human-centered digitalization approach. Our goal is to improve access to healthcare by developing digital solutions adapted to local realities.",
    focusTitle: "Our approach revolves around SDG 3",
    focusDescription: "Ensure healthy lives and promote well-being for all at all ages through responsible e-health innovation.",
    valuesList: [
      {
        title: "Responsible Innovation",
        description: "Develop ethical digital solutions tailored to the real needs of communities.",
        icon: "lightbulb"
      },
      {
        title: "Digital Inclusion",
        description: "Ensure our solutions are accessible to all, regardless of location or literacy level.",
        icon: "users"
      },
      {
        title: "Sustainability",
        description: "Create lasting systems that integrate into existing infrastructure and evolve with needs.",
        icon: "leaf"
      },
      {
        title: "Collaboration",
        description: "Work hand in hand with local stakeholders, healthcare professionals, and communities.",
        icon: "handshake"
      }
    ]
  }
};

const { title, subtitle, description, focusTitle, focusDescription, valuesList } = content[lang];

// Icons map
const icons = {
  lightbulb: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>`,
  users: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>`,
  leaf: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.618 5.984A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016zM12 9v2m0 4h.01" /></svg>`,
  handshake: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11" /></svg>`
};
---

<section id="mission" class="section bg-gray-50">
  <div class="container-custom">
    <SectionTitle title={title} subtitle={subtitle} />
    
    <div class="max-w-4xl mx-auto mb-16">
      <p class="text-lg leading-relaxed mb-8 text-center">
        {description}
      </p>
      
      <div class="bg-primary-500 text-white p-8 rounded-lg">
        <h3 class="text-xl md:text-2xl font-bold mb-4 text-center">
          {focusTitle}
        </h3>
        <p class="text-center">
          {focusDescription}
        </p>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {valuesList.map(value => (
        <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-center text-center transform transition-transform duration-300 hover:-translate-y-2">
          <div set:html={icons[value.icon]} />
          <h3 class="text-xl font-semibold mb-3 text-primary-700">{value.title}</h3>
          <p class="text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>