---
import SectionTitle from './SectionTitle.astro';

const { lang = 'fr' } = Astro.props;

const content = {
  fr: {
    title: "Nos Actions",
    subtitle: "Des initiatives concrètes pour transformer la santé numérique",
    actions: [
      {
        title: "Portail Santé Numérique",
        description: "Plateforme numérique de référence qui centralise informations fiables et services e-santé pour patients et professionnels.",
        image: "https://i.ibb.co/S772Gh8F/16.png"
      },
      {
        title: "Programmes de Santé",
        description: "Initiatives ciblées (maternité, diabète, hypertension…) offrant suivi personnalisé, éducation et accompagnement continu.",
        image: "https://i.ibb.co/rfvPTMWY/17.png"
      },
      {
        title: "Événements Santé",
        description: "Formations, ateliers et campagnes de sensibilisation pour renforcer les compétences numériques et l'adoption des solutions e-santé.",
        image: "https://i.ibb.co/9HWHXCdc/18.png"
      },
      {
        title: "Comités",
        description: "Groupes de travail multisectoriels qui orientent nos actions et assurent leur pertinence face aux besoins locaux.",
        image: "https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
      },
      {
        title: "Équipements & Infrastructures",
        description: "Déploiement de solutions technologiques adaptées aux contextes locaux pour améliorer la qualité des soins.",
        image: "https://i.ibb.co/3yv97LZV/19.png"
      }
    ]
  },
  en: {
    title: "Our Actions",
    subtitle: "Concrete initiatives to transform digital health",
    actions: [
      {
        title: "Digital Health Portal",
        description: "Centralized platform providing access to digital health services, medical records, and remote consultations.",
        image: "https://i.ibb.co/S772Gh8F/16.png"
      },
      {
        title: "Health Programs",
        description: "Targeted initiatives to address priority public health challenges such as maternal health, vaccination, and chronic disease management.",
        image: "https://i.ibb.co/rfvPTMWY/17.png"
      },
      {
        title: "Health Events",
        description: "Training sessions, workshops, and awareness campaigns to strengthen digital skills and e-health solution adoption.",
        image: "https://i.ibb.co/9HWHXCdc/18.png"
      },
      {
        title: "Committees",
        description: "Multisectoral working groups that guide our actions and ensure their relevance to local needs.",
        image: "https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
      },
      {
        title: "Equipment & Infrastructure",
        description: "Deployment of technological solutions adapted to local contexts to improve the quality of care.",
        image: "https://i.ibb.co/3yv97LZV/19.png"
      }
    ]
  }
};

const { title, subtitle, actions } = content[lang];
---

<section id="actions" class="section">
  <div class="container-custom">
    <SectionTitle title={title} subtitle={subtitle} />
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {actions.map((action) => (
        <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform duration-300 hover:-translate-y-2">
          <div class="relative h-60 overflow-hidden">
            <img 
              src={action.image} 
              alt={action.title} 
              class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-primary-700">{action.title}</h3>
            <p class="text-gray-600">{action.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>