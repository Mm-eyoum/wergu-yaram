---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: 'fr' | 'en';
}

const { 
  title, 
  description = "Wergu Yaram - Programme de digitalisation inclusive des structures de sant√©",
  lang = 'fr'
} = Astro.props;

const alternateLink = Astro.url.pathname.startsWith('/en') 
  ? Astro.url.pathname.replace('/en', '') 
  : '/en' + Astro.url.pathname;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="https://i.ibb.co/V0syjKVy/Icone-Wg.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Wergu Yaram</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/og-image.jpg" />

    <!-- Language alternates -->
    <link rel="alternate" hreflang={lang === 'fr' ? 'en' : 'fr'} href={alternateLink} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>